<resources>

    <style name="TheBlendTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="TheBlendTheme.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/header</item>
        <item name="android:titleTextStyle">@style/TheBlendTheme.ActionBar.TitleTextStyle</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TheBlendTheme.ActionBar</item>
    </style>

</resources>